#!/bin/bash

# Determine terminal capabilites
MACHINE=$(uname)

if [[ ! $MACHINE == *'CYGWIN'* ]] ; then
    tp='tput';
    tps=$tp' setaf';
    reset=$tp' sgr0';
    yellow=$($tps 136);
    orange=$($tps 166);
    red=$($tps 124);
    magenta=$($tps 125);
    violet=$($tps 61);
    blue=$($tps 33);
    cyan=$($tps 37);
    green=$($tps 64);
    black=$($tps 0);
    white=$($tps 15);

    regc=$white;
    userc=$blue;
    hostc=$cyan;
    pathc=$violet;
    gitc=$magenta;
    timec=$orange;
else
    yellow="\e[0;33m";
    orange="\e[0;33m"; # yellow - placeholder
    red="\e[0;31m";
    magenta="\e[0;31m"; # red - placeholder
    violet="\e[0;35m";
    blue="\e[0;34m";
    cyan="\e[0;36m";
    green="\e[0;32m";
    black="\e[0;30m";
    white="\e[0;37m";
    
    regc=$black;
    userc=$blue;
    hostc=$cyan;
    pathc=$violet;
    gitc=$magenta;
    timec=$orange;

fi

# This is lifted from https://github.com/jessfraz/dotfiles/blob/master/.bash_prompt
prompt_git() {
    local s='';
    local branchName='';

    # Check if the current directory is in a Git repository.
    if [ "$(git rev-parse --is-inside-work-tree &>/dev/null; echo "${?}")" == '0' ]; 
    then

        # check if the current directory is in .git before running git checks
        if [ "$(git rev-parse --is-inside-git-dir 2> /dev/null)" == 'false' ]; then

            if [[ -O "$(git rev-parse --show-toplevel)/.git/index" ]]; then
                git update-index --really-refresh -q &> /dev/null;
            fi;

            # Check for uncommitted changes in the index.
            if ! git diff --quiet --ignore-submodules --cached; then
                s+='+';
            fi;

            # Check for unstaged changes.
            if ! git diff-files --quiet --ignore-submodules --; then
                s+='!';
            fi;

            # Check for untracked files.
            if [ -n "$(git ls-files --others --exclude-standard)" ]; then
                s+='?';
            fi;

            # Check for stashed files.
            if git rev-parse --verify refs/stash &>/dev/null; then
                s+='$';
            fi;

        fi;

        # Get the short symbolic ref.
        # If HEAD isnâ€™t a symbolic ref, get the short SHA for the latest commit
        # Otherwise, just give up.
        branchName="$(git symbolic-ref --quiet --short HEAD 2> /dev/null || \
            git rev-parse --short HEAD 2> /dev/null || \
            echo '(unknown)')";

        [ -n "${s}" ] && s=" [${s}]";

        echo -e "${1}${branchName}${blue}${s}";
    else
        return;
    fi;
}

PS1="";
#PS1+="\[${reset}\]";
PS1+="\[${userc}\]\u";
PS1+="\[${regc}\] at ";
PS1+="\[${hostc}\]\h";
PS1+="\[${regc}\] in ";
PS1+="\[${pathc}\]\w";
PS1+="\$(prompt_git \"${regc} branch ${gitc}\")"
PS1+="\[${regc}\] ";
PS1+="\[${timec}\]\d \t"
PS1+="\n";
PS1+="\[${regc}\] ~ ";
export PS1;

PS2="";
PS2+="... ";
export PS2;
