# All Git everything
alias g='git'
alias gs='git status'
alias gclone='git clone'
alias ga='git add'
alias gall='git add .'
alias gcm='git commit -m'
alias grmt='git remote'
alias gcbr='git checkout -b'
alias grau='git remote add upstream'
alias gp='git push'
alias gconfig='git config --list'
alias glg="git log --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%an%C(reset) %C(cyan)%cr%C(reset) %s %C(green)%d%C(reset)' --graph --date-order"
